extends ../layout

block content
  .container.mt-4
    .card
      .card-header Add Material
      .card-body
        form(action="/material", method="POST")
          .mb-3
            label(for="name" class="form-label") Name
            input#name.form-control(type="text", name="name", required)
          .mb-3
            label(for="supplierId" class="form-label") Supplier
            select#supplierId.form-select(name="supplierId", required)
              each supplier in suppliers
                option(value=supplier.id)= supplier.name
          .mb-3
            button.btn.btn-primary(type="submit") Add Material
