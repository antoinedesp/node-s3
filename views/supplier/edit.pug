extends ../layout

block content
  .container.mt-4
    .card
      .card-header Edit Supplier
      .card-body
        form(action=`/supplier/${supplier.id}/edit`, method="POST")
          .mb-3
            label(for="name" class="form-label") Name
            input#name.form-control(type="text", name="name", value=supplier.name, required)
          button.btn.btn-primary(type="submit") Save Changes
